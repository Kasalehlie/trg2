---
import { CustomHeader } from "../components/CustomHeader";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
let title = "The Ritchie Group";
---

<html lang="en" class="bg-dark-bg h-full overflow-x-hidden overflow-y-auto">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, minimum-scale=1"
    />
    <link
      rel="icon"
      href="https://res.cloudinary.com/dgjw3jwe3/image/upload/v1677733302/images/Logos/CLIENT/Ritchie_Group_Logo_Mark_small_nm9dyn.png"
    />
    <title>{title}</title>

    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  </head>
  <body class="bg-darkbg text-white min-h-full">
    <CustomHeader client:load />
    <slot />
  </body>
  <Footer />
</html>
